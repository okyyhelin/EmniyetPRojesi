@model IEnumerable<EmniyetPRojesi.Models.Birimler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BirimAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BirimAdi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.BirimID }, new { @class = "btn bt-sm btn-outline-warning" }) |
            @Html.ActionLink("Detay", "Details", new { id = item.BirimID }, new { @class = "btn bt-sm btn-outline-info" }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.BirimID }, new { @class = "btn bt-sm btn-outline-danger"}) 
        </td>
    </tr>
}

</table>
