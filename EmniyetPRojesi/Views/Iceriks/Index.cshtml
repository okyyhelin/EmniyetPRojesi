@model IEnumerable<EmniyetPRojesi.Models.Icerik>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.QR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birimler.BirimAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tur.TurAdi)
        </th>
        <th>
            Okunma Sayısı
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yonetici.TC)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Birimler.BirimAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tur.TurAdi)
        </td>
        <td>
            <img src="@item.QR" width="50" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @item.Rapor.Count()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Yonetici.AdSoyad)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IcerikID }, new { @class = "btn bt-sm btn-outline-info" }) |
            @Html.ActionLink("Details", "Details", new { id = item.IcerikID }, new { @class = "btn bt-sm bt-outline-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IcerikID }, new { @clas = "btn bt-sm bt-outline-info" })
        </td>
    </tr>
}

</table>
